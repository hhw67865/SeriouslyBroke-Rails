<%# Professional Savings Goal Show Page %>
<%
  calculator = @savings_pool.calculator
  progress = calculator.progress_percentage
  current_balance = calculator.current_balance
  target_amount = @savings_pool.target_amount
  remaining = calculator.remaining_amount
%>

<%= page_header(
    title: @savings_pool.name,
    subtitle: "Savings pool details and progress",
    breadcrumbs: [
      { label: "Savings Pools", url: savings_pools_path },
      { label: @savings_pool.name }
    ],
    actions: [
      {
        label: "Edit",
        url: edit_savings_pool_path(@savings_pool),
        class: "inline-flex items-center gap-2 px-4 py-2 rounded border border-gray-300 bg-white text-gray-700 text-sm font-medium hover:bg-gray-50 shadow-sm transition"
      },
      {
        label: "Delete",
        url: savings_pool_path(@savings_pool),
        method: :delete,
        class: "inline-flex items-center gap-2 px-4 py-2 rounded bg-status-danger text-white text-sm font-medium hover:opacity-90 shadow-sm transition",
        confirm: "Are you sure you want to delete this savings pool? This action cannot be undone."
      }
    ]
) %>

<div class="max-w-6xl mx-auto">

  <% cache [@savings_pool, selected_date] do %>
  <%# Hero Progress Section %>
  <div class="bg-white rounded shadow-sm border border-gray-100 p-8 mb-8">
    <%# Progress Visualization %>
    <div class="mb-8">
      <div class="flex justify-between items-center mb-3">
        <span class="text-sm font-medium text-gray-700">Progress</span>
        <span class="text-sm font-semibold text-gray-900"><%= progress %>% complete</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-4 overflow-hidden mb-4">
        <div class="h-4 rounded-full transition-all duration-700 ease-out
             <%= if progress >= 100
                   'bg-status-success'
                 elsif progress < 0
                   'bg-status-danger'
                 else
                   'bg-brand'
                 end %>"
             style="width: <%= [progress, 100].min %>%;"></div>
      </div>

      <%# Status Badge %>
      <% if progress >= 100 %>
        <div class="inline-flex items-center px-3 py-2 rounded-full text-sm font-medium bg-status-success-light text-status-success">
          <%= heroicon "check-circle", options: { class: "h-4 w-4 mr-2" } %>
          Goal Achieved!
        </div>
      <% elsif progress.negative? %>
        <div class="inline-flex items-center px-3 py-2 rounded-full text-sm font-medium bg-status-danger-light text-status-danger">
          <%= heroicon "exclamation-triangle", options: { class: "h-4 w-4 mr-2" } %>
          <%= progress %>% Complete
        </div>
      <% elsif progress >= 75 %>
        <div class="inline-flex items-center px-3 py-2 rounded-full text-sm font-medium bg-status-info-light text-status-info">
          <%= heroicon "trending-up", options: { class: "h-4 w-4 mr-2" } %>
          Almost There
        </div>
      <% elsif progress >= 25 %>
        <div class="inline-flex items-center px-3 py-2 rounded-full text-sm font-medium bg-status-warning-light text-status-warning">
          <%= heroicon "chart-bar", options: { class: "h-4 w-4 mr-2" } %>
          Making Progress
        </div>
      <% else %>
        <div class="inline-flex items-center px-3 py-2 rounded-full text-sm font-medium bg-gray-100 text-gray-700">
          <%= heroicon "play", options: { class: "h-4 w-4 mr-2" } %>
          Getting Started
        </div>
      <% end %>
    </div>

    <%# Key Metrics %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="text-center">
        <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-2">Current Balance</div>
        <div class="text-2xl md:text-3xl font-bold <%= current_balance >= 0 ? "text-gray-900" : "text-status-danger" %>">
          <%= number_to_currency(current_balance) %>
        </div>
      </div>

      <div class="text-center">
        <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-2">Target Goal</div>
        <div class="text-2xl md:text-3xl font-bold text-gray-900">
          <%= number_to_currency(target_amount) %>
        </div>
      </div>

      <div class="text-center">
        <div class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-2">
          <%= progress >= 100 ? "Excess Saved" : "Still Needed" %>
        </div>
        <div class="text-2xl md:text-3xl font-bold text-brand">
          <%= number_to_currency(remaining) %>
        </div>
      </div>
    </div>
  </div>

  <%# Money Flow Summary %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <div class="bg-white rounded shadow-sm border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">Total Contributions</h3>
        <div class="w-10 h-10 rounded-full bg-status-success-light flex items-center justify-center">
          <%= heroicon "arrow-up", options: { class: "h-5 w-5 text-status-success" } %>
        </div>
      </div>
      <div class="text-2xl font-bold text-status-success mb-2">
        +<%= number_to_currency(calculator.contributions) %>
      </div>
      <p class="text-sm text-gray-600">From savings categories</p>
    </div>

    <div class="bg-white rounded shadow-sm border border-gray-100 p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-semibold text-gray-900">Total Withdrawals</h3>
        <div class="w-10 h-10 rounded-full bg-status-danger-light flex items-center justify-center">
          <%= heroicon "arrow-down", options: { class: "h-5 w-5 text-status-danger" } %>
        </div>
      </div>
      <div class="text-2xl font-bold text-status-danger mb-2">
        -<%= number_to_currency(calculator.withdrawals) %>
      </div>
      <p class="text-sm text-gray-600">From expense categories</p>
    </div>
  </div>

  <%# Recent Activity %>
  <% if @recent_entries.any? %>
    <div class="bg-white rounded shadow-sm border border-gray-100 p-6 mb-8">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900">Recent Activity</h3>
        <div class="flex items-center gap-3">
          <span class="text-sm text-gray-500">Last 8 transactions</span>
          <%= link_to entries_path(field: "savings_pool", q: @savings_pool.name), class: "inline-flex items-center px-3 py-2 text-sm font-medium text-brand hover:text-brand-dark" do %>
            <span>Show All Activity</span>
            <%= heroicon "arrow-right", options: { class: "h-4 w-4 ml-1.5" } %>
          <% end %>
        </div>
      </div>

      <div class="space-y-3">
        <% @recent_entries.each do |entry| %>
          <div class="flex items-center justify-between p-4 bg-gray-50 rounded hover:bg-gray-100 transition-colors">
            <div class="flex items-center">
              <div class="mr-4">
                <% if entry.category.savings? %>
                  <div class="w-10 h-10 rounded-full bg-status-success-light flex items-center justify-center">
                    <%= heroicon "plus", options: { class: "h-5 w-5 text-status-success" } %>
                  </div>
                <% else %>
                  <div class="w-10 h-10 rounded-full bg-status-danger-light flex items-center justify-center">
                    <%= heroicon "minus", options: { class: "h-5 w-5 text-status-danger" } %>
                  </div>
                <% end %>
              </div>
              <div>
                <div class="font-medium text-gray-900"><%= entry.item.name %></div>
                <div class="text-sm text-gray-500 flex items-center">
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium mr-2 <%= entry.category.savings? ? "bg-status-success-light text-status-success" : "bg-status-danger-light text-status-danger" %>">
                    <%= entry.category.savings? ? "Savings" : "Expense" %>
                  </span>
                  <%= entry.category.name %> â€¢ <%= time_ago_in_words(entry.date) %> ago
                </div>
              </div>
            </div>
            <div class="text-right">
              <div class="font-semibold <%= entry.category.savings? ? "text-status-success" : "text-status-danger" %>">
                <%= entry.category.savings? ? "+" : "-" %><%= number_to_currency(entry.amount) %>
              </div>
              <div class="text-xs text-gray-500">
                <%= entry.date.strftime("%b %d, %Y") %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Connected Categories %>
  <div class="bg-white rounded shadow-sm border border-gray-100 p-6 mb-8">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-gray-900">Connected Categories</h3>
      <%= link_to categories_savings_pool_path(@savings_pool),
          class: "inline-flex items-center gap-2 px-4 py-2 rounded bg-brand text-white text-sm font-medium hover:bg-brand-dark shadow-sm transition" do %>
        <%= heroicon "cog-6-tooth", options: { class: "h-4 w-4" } %>
        Manage Categories
      <% end %>
    </div>

    <% if @connected_categories.any? %>
      <%# Separate savings and expense categories %>
      <% savings_categories = @connected_categories.select(&:savings?) %>
      <% expense_categories = @connected_categories.select(&:expense?) %>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <%# Savings Categories (Contributing) %>
        <div>
          <h4 class="text-sm font-medium text-status-success mb-4 flex items-center">
            <%= heroicon "plus-circle", options: { class: "h-4 w-4 mr-2" } %>
            Contributing Categories (<%= savings_categories.count %>)
          </h4>
          <% if savings_categories.any? %>
            <div class="space-y-3">
              <% savings_categories.each do |category| %>
                <div class="flex items-center justify-between p-3 bg-status-success-light border border-status-success rounded">
                  <div class="flex items-center">
                    <div class="w-8 h-8 rounded-full bg-status-success-light flex items-center justify-center mr-3">
                      <%= heroicon "arrow-up", options: { class: "h-4 w-4 text-status-success" } %>
                    </div>
                    <div>
                      <div class="font-medium text-gray-900"><%= category.name %></div>
                      <div class="text-sm text-gray-600">Savings category</div>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="text-sm font-medium text-status-success">
                      +<%= number_to_currency(category.calculator(selected_date).total_amount) %>
                    </div>
                    <div class="text-xs text-gray-500"><%= format_month_year %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4 text-gray-500 text-sm">No contributing categories connected</div>
          <% end %>
        </div>

        <%# Expense Categories (Withdrawing) %>
        <div>
          <h4 class="text-sm font-medium text-status-danger mb-4 flex items-center">
            <%= heroicon "minus-circle", options: { class: "h-4 w-4 mr-2" } %>
            Withdrawing Categories (<%= expense_categories.count %>)
          </h4>
          <% if expense_categories.any? %>
            <div class="space-y-3">
              <% expense_categories.each do |category| %>
                <div class="flex items-center justify-between p-3 bg-status-danger-light border border-status-danger rounded">
                  <div class="flex items-center">
                    <div class="w-8 h-8 rounded-full bg-status-danger-light flex items-center justify-center mr-3">
                      <%= heroicon "arrow-down", options: { class: "h-4 w-4 text-status-danger" } %>
                    </div>
                    <div>
                      <div class="font-medium text-gray-900"><%= category.name %></div>
                      <div class="text-sm text-gray-600">Expense category</div>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="text-sm font-medium text-status-danger">
                      -<%= number_to_currency(category.calculator(selected_date).total_amount) %>
                    </div>
                    <div class="text-xs text-gray-500"><%= format_month_year %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4 text-gray-500 text-sm">No withdrawing categories connected</div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="mx-auto w-16 h-16 rounded-full bg-gray-100 flex items-center justify-center mb-4">
          <%= heroicon "link", options: { class: "h-8 w-8 text-gray-400" } %>
        </div>
        <div class="text-gray-500 mb-2">No categories connected</div>
        <p class="text-sm text-gray-400 mb-6">Connect categories to start tracking your progress automatically</p>
        <%= link_to categories_savings_pool_path(@savings_pool),
            class: "inline-flex items-center gap-2 px-4 py-2 rounded bg-brand text-white text-sm font-medium hover:bg-brand-dark shadow-sm transition" do %>
          <%= heroicon "plus", options: { class: "h-4 w-4" } %>
          Connect Your First Category
        <% end %>
      </div>
    <% end %>
  </div>
  <% end %>
