<!-- Entries Table -->
<div class="bg-white rounded shadow-sm border border-gray-200">
  <% if entries.any? %>
    <%# Mobile: Card Layout %>
    <div class="md:hidden divide-y divide-gray-200">
      <% entries.each do |entry| %>
        <div class="p-4">
          <div class="flex items-start justify-between mb-2">
            <div class="flex items-center gap-2">
              <% case entry.item.category.category_type %>
              <% when "expense" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-status-danger-light text-status-danger">
                  Expense
                </span>
              <% when "income" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-status-success-light text-status-success">
                  Income
                </span>
              <% when "savings" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-status-info-light text-status-info">
                  Savings
                </span>
              <% end %>
              <span class="text-xs text-gray-500"><%= entry.date.strftime("%b %d, %Y") %></span>
            </div>
            <span class="text-sm font-semibold text-gray-900"><%= number_to_currency(entry.amount) %></span>
          </div>
          <div class="mb-2">
            <div class="font-medium text-gray-900"><%= entry.item.name %></div>
            <div class="text-sm text-gray-500"><%= entry.item.category.name %></div>
            <% if entry.description.present? %>
              <div class="text-xs text-gray-400 mt-1"><%= entry.description %></div>
            <% end %>
          </div>
          <div class="flex gap-4">
            <%= link_to edit_entry_path(entry), class: "text-sm text-status-info hover:opacity-80" do %>
              Edit
            <% end %>
            <%= link_to entry_path(entry),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this entry?" },
                class: "text-sm text-status-danger hover:opacity-80" do %>
              Delete
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <%# Desktop: Table Layout %>
    <div class="hidden md:block overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Type
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sortable_header(:date, "Date", current_sort: @current_sort, current_direction: @current_direction) %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Item & Description
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Category
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= sortable_header(:amount, "Amount", current_sort: @current_sort, current_direction: @current_direction) %>
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <%= render partial: "entry", collection: entries %>
        </tbody>
      </table>
    </div>
    
    <%# Pagination %>
    <% if entries.respond_to?(:current_page) && entries.total_pages > 1 %>
      <div class="bg-white px-6 py-4 border-t border-gray-200">
        <%# Mobile pagination %>
        <div class="flex justify-between items-center md:hidden">
          <%= link_to_prev_page entries, "Previous", class: "relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-300 rounded-md hover:bg-gray-50 hover:text-gray-800 transition-colors duration-200 shadow-sm" %>
          <div class="flex items-center">
            <span class="text-sm font-semibold text-gray-900">Page <%= entries.current_page %> of <%= entries.total_pages %></span>
          </div>
          <%= link_to_next_page entries, "Next", class: "relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-300 rounded-md hover:bg-gray-50 hover:text-gray-800 transition-colors duration-200 shadow-sm" %>
        </div>
        
        <%# Desktop pagination %>
        <div class="hidden md:flex md:items-center md:justify-between">
          <div class="flex-1">
            <p class="text-sm text-gray-700">
              Showing <span class="font-semibold text-gray-900"><%= entries.offset_value + 1 %></span> to 
              <span class="font-semibold text-gray-900"><%= entries.offset_value + entries.length %></span> of 
              <span class="font-semibold text-gray-900"><%= entries.total_count %></span> entries
            </p>
          </div>
          <div class="flex items-center space-x-3">
            <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
              <%= paginate entries %>
            </nav>
          </div>
        </div>
      </div>
    <% elsif entries.respond_to?(:total_count) && entries.total_count.positive? %>
      <%# Show total count even when no pagination needed %>
      <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
        <p class="text-sm text-gray-700 text-center">
          <span class="font-medium"><%= entries.total_count %></span> 
          <%= entries.total_count == 1 ? "entry" : "entries" %> total
        </p>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <div class="text-gray-500 text-lg">No entries found</div>
      <% if defined?(current_type) && current_type != "all" %>
        <p class="text-gray-400 text-sm mt-2">Try adjusting your filter or search criteria</p>
      <% end %>
    </div>
  <% end %>
</div> 