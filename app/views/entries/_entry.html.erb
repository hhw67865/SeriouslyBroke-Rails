<%# Individual Entry Row %>
<tr class="hover:bg-gray-50 transition-colors duration-200">
  <td class="px-6 py-4 whitespace-nowrap">
    <% case entry.item.category.category_type %>
    <% when "expense" %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
        <%= heroicon "minus-circle", options: { class: "w-3 h-3 mr-1" } %>
        Expense
      </span>
    <% when "income" %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
        <%= heroicon "plus-circle", options: { class: "w-3 h-3 mr-1" } %>
        Income
      </span>
    <% when "savings" %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
        <%= heroicon "circle-stack", options: { class: "w-3 h-3 mr-1" } %>
        Savings
      </span>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
    <%= entry.date.strftime("%b %d, %Y") %>
  </td>
  <td class="px-6 py-4 text-sm text-gray-900">
    <div class="font-medium"><%= entry.item.name %></div>
    <% if entry.description.present? %>
      <div class="text-gray-500 text-xs mt-1"><%= entry.description %></div>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= entry.item.category.name %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= number_to_currency(entry.amount) %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
    <div class="flex space-x-2">
      <%= link_to entry_path(entry), class: "text-brand hover:text-brand-dark transition-colors duration-200", title: "View" do %>
        <%= heroicon "eye", options: { class: "w-4 h-4" } %>
      <% end %>
      <%= link_to edit_entry_path(entry), class: "text-blue-600 hover:text-blue-900 transition-colors duration-200", title: "Edit" do %>
        <%= heroicon "pencil", options: { class: "w-4 h-4" } %>
      <% end %>
      <%= link_to entry_path(entry), 
method: :delete, 
          class: "text-red-600 hover:text-red-900 transition-colors duration-200", 
          title: "Delete",
          confirm: "Are you sure you want to delete this entry?" do %>
        <%= heroicon "trash", options: { class: "w-4 h-4" } %>
      <% end %>
    </div>
  </td>
</tr>
