<%# Individual Entry Row %>
<tr class="hover:bg-gray-50 transition-colors duration-200">
  <td class="px-6 py-4 whitespace-nowrap">
    <% case entry.item.category.category_type %>
    <% when "expense" %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-status-danger-light text-status-danger">
        <%= heroicon "minus-circle", options: { class: "w-3 h-3 mr-1" } %>
        Expense
      </span>
    <% when "income" %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-status-success-light text-status-success">
        <%= heroicon "plus-circle", options: { class: "w-3 h-3 mr-1" } %>
        Income
      </span>
    <% when "savings" %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-status-info-light text-status-info">
        <%= heroicon "circle-stack", options: { class: "w-3 h-3 mr-1" } %>
        Savings
      </span>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
    <%= entry.date.strftime("%b %d, %Y") %>
  </td>
  <td class="px-6 py-4 text-sm text-gray-900">
    <div class="font-medium"><%= entry.item.name %></div>
    <% if entry.description.present? %>
      <div class="text-gray-500 text-xs mt-1"><%= entry.description %></div>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
    <%= entry.item.category.name %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
    <%= number_to_currency(entry.amount) %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
    <div class="flex space-x-2">
      <%= link_to edit_entry_path(entry), class: "text-status-info hover:opacity-80 transition-colors duration-200", title: "Edit" do %>
        <%= heroicon "pencil", options: { class: "w-4 h-4" } %>
      <% end %>
      <%= link_to entry_path(entry),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this entry?" },
          class: "text-status-danger hover:opacity-80 transition-colors duration-200",
          title: "Delete" do %>
        <%= heroicon "trash", options: { class: "w-4 h-4" } %>
      <% end %>
    </div>
  </td>
</tr>
