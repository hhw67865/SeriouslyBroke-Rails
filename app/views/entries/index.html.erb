<% content_for :title, "Entries" %>

<div class="w-full">
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Entries</h1>
    <%= link_to new_entry_path, class: "bg-brand hover:bg-brand-dark text-white px-4 py-2 rounded-lg font-medium transition-colors duration-200" do %>
      <span class="flex items-center">
        <%= heroicon "plus", options: { class: "w-5 h-5 mr-2" } %>
        New Entry
      </span>
    <% end %>
  </div>

  <!-- Tab Navigation -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
    <div class="border-b border-gray-200">
      <nav class="flex space-x-8 px-6" aria-label="Tabs">
        <%= link_to entries_path, 
            class: "py-4 px-1 border-b-2 font-medium text-sm whitespace-nowrap transition-colors duration-200 #{'border-brand text-brand' if @current_type == 'all'} #{'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' if @current_type != 'all'}" do %>
          All Entries
        <% end %>
        
        <%= link_to entries_path(type: 'expenses'), 
            class: "py-4 px-1 border-b-2 font-medium text-sm whitespace-nowrap transition-colors duration-200 #{'border-brand text-brand' if @current_type == 'expenses'} #{'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' if @current_type != 'expenses'}" do %>
          <span class="flex items-center">
            <%= heroicon "arrow-trending-down", options: { class: "w-4 h-4 mr-1" } %>
            Expenses
          </span>
        <% end %>
        
        <%= link_to entries_path(type: 'income'), 
            class: "py-4 px-1 border-b-2 font-medium text-sm whitespace-nowrap transition-colors duration-200 #{'border-brand text-brand' if @current_type == 'income'} #{'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' if @current_type != 'income'}" do %>
          <span class="flex items-center">
            <%= heroicon "arrow-trending-up", options: { class: "w-4 h-4 mr-1" } %>
            Income
          </span>
        <% end %>
        
        <%= link_to entries_path(type: 'savings'), 
            class: "py-4 px-1 border-b-2 font-medium text-sm whitespace-nowrap transition-colors duration-200 #{'border-brand text-brand' if @current_type == 'savings'} #{'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' if @current_type != 'savings'}" do %>
          <span class="flex items-center">
            <%= heroicon "banknotes", options: { class: "w-4 h-4 mr-1" } %>
            Savings
          </span>
        <% end %>
      </nav>
    </div>
  </div>

  <!-- Entries Content -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <% if @entries.any? %>
      <div class="overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Item & Description</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @entries.each do |entry| %>
              <tr class="hover:bg-gray-50 transition-colors duration-150">
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= entry.item.category.expense? ? 'bg-red-100 text-red-800' : entry.item.category.income? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                    <%= heroicon(entry.item.category.expense? ? "arrow-trending-down" : entry.item.category.income? ? "arrow-trending-up" : "banknotes", options: { class: "w-3 h-3 mr-1" }) %>
                    <%= entry.item.category.category_type.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= entry.date.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <div class="flex flex-col">
                    <span class="font-medium text-gray-900"><%= entry.item.name %></span>
                    <% if entry.description.present? %>
                      <span class="text-gray-500 text-xs mt-1"><%= entry.description %></span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-800">
                    <%= entry.item.category.name %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold">
                  <span class="<%= entry.item.category.expense? ? 'text-red-600' : entry.item.category.income? ? 'text-green-600' : 'text-blue-600' %>">
                    <%= entry.item.category.expense? ? '-' : '+' %>$<%= number_with_precision(entry.amount, precision: 2, delimiter: ',') %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex justify-end space-x-3">
                    <%= link_to entry_path(entry), class: "text-gray-600 hover:text-gray-900 transition-colors duration-200", title: "View entry" do %>
                      <%= heroicon "eye", options: { class: "w-4 h-4" } %>
                    <% end %>
                    <%= link_to edit_entry_path(entry), class: "text-gray-600 hover:text-gray-900 transition-colors duration-200", title: "Edit entry" do %>
                      <%= heroicon "pencil", options: { class: "w-4 h-4" } %>
                    <% end %>
                    <%= button_to entry_path(entry), method: :delete, 
                        class: "text-red-600 hover:text-red-900 transition-colors duration-200", 
                        title: "Delete entry",
                        data: { turbo_confirm: "Are you sure?" } do %>
                      <%= heroicon "trash", options: { class: "w-4 h-4" } %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="mx-auto w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mb-4">
          <%= heroicon "document-text", options: { class: "w-6 h-6 text-gray-400" } %>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No entries found</h3>
        <p class="text-gray-500 mb-4">
          <% if @current_type == 'all' %>
            Get started by creating your first entry.
          <% else %>
            No <%= @current_type %> entries found. Try a different filter or create a new entry.
          <% end %>
        </p>
        <%= link_to new_entry_path, class: "bg-brand hover:bg-brand-dark text-white px-4 py-2 rounded-lg font-medium transition-colors duration-200" do %>
          <span class="flex items-center">
            <%= heroicon "plus", options: { class: "w-5 h-5 mr-2" } %>
            New Entry
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
