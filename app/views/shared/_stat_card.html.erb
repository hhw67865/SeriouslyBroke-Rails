<%# Stat Card Component %>
<div class="bg-white rounded shadow-sm border-l-4 p-6 <%= border_color %>">
  <div class="flex items-center gap-2 text-sm font-medium text-gray-500 mb-3">
    <span class="text-lg"><%= icon %></span>
    <%= label %>
  </div>
  
  <div class="text-2xl font-semibold text-gray-900 mb-3">
    <%= value %>
  </div>
  
  <% if local_assigns[:trend].present? %>
    <div class="flex items-center text-sm">
      <% if trend[:type] == :up %>
        <span class="inline-flex items-center px-2 py-0.5 rounded text-success-700 bg-success-50 text-xs font-medium">
          +<%= trend[:value] %>%
        </span>
      <% elsif trend[:type] == :down %>
        <span class="inline-flex items-center px-2 py-0.5 rounded text-danger-700 bg-danger-50 text-xs font-medium">
          -<%= trend[:value] %>%
        </span>
      <% end %>
      <span class="ml-2 text-gray-600"><%= trend[:label] %></span>
    </div>
  <% end %>

  <% if local_assigns[:progress].present? %>
    <div class="text-sm text-gray-600">
      <%= progress %>
    </div>
  <% end %>
</div> 