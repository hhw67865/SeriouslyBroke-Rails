<%# Navigation Section %>
<div class="px-3 mt-6">
  <div class="text-sm font-semibold text-on-dark-light uppercase tracking-wider px-3 mb-2">
    <%= title %>
  </div>
  <nav class="space-y-1">
    <% links.each do |link| %>
      <% 
        # Check if we're on an exact page match or a sub-page of categories
        is_active = current_page?(link[:path]) || 
                   (link[:name] == "Categories" && controller_name == "categories")
      %>
      <%= link_to link[:path], 
          class: class_names(
            "flex items-center px-3 py-2.5 text-base font-medium rounded-md transition-colors",
            "border-l-2",
            is_active ? 
              "bg-white text-brand-dark border-brand-dark" : 
              "text-on-dark hover:bg-white/5 border-transparent"
          ) do %>
        <span class="mr-3">
          <%= heroicon link[:icon], options: { class: "w-5 h-5" } %>
        </span>
        <%= link[:name] %>
      <% end %>
    <% end %>
  </nav>
</div> 