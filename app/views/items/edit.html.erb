<%# Item Edit Page using standardized page header %>
<%= page_header(
    title: "Edit Item",
    subtitle: "Update details for #{@item.name}",
    breadcrumbs: [
      { label: "Categories", url: categories_path },
      { label: @item.category.name, url: category_path(@item.category) },
      { label: "Edit #{@item.name}" }
    ]
) %>

<div class="max-w-2xl mx-auto">
  <%= render "form", item: @item %>
</div>
