<!-- Breadcrumb and notices -->
<div class="mb-6">
  <div class="flex flex-col sm:flex-row sm:items-center justify-between">
    <div>
      <nav class="flex mb-3" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <%= link_to "Categories", categories_path(type: category.category_type), class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700" %>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <span class="mx-2 text-gray-400">/</span>
              <span class="text-sm font-medium text-gray-500"><%= category.name %></span>
            </div>
          </li>
        </ol>
      </nav>
      
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-4 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
      <% end %>
    </div>
    
    <div class="flex flex-wrap gap-2 mt-3 sm:mt-0">
      <%= link_to edit_category_path(category), class: "inline-flex items-center gap-x-1.5 rounded-md px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 shadow-sm hover:bg-gray-50" do %>
        <%= heroicon "pencil-square", options: { class: "h-4 w-4" } %>
        <span>Edit</span>
      <% end %>
      
      <%= link_to categories_path(type: category.category_type), class: "inline-flex items-center gap-x-1.5 rounded-md px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 shadow-sm hover:bg-gray-50" do %>
        <%= heroicon "arrow-left", options: { class: "h-4 w-4" } %>
        <span>Back</span>
      <% end %>
      
      <%= button_to category, method: :delete, class: "inline-flex items-center gap-x-1.5 rounded-md px-3 py-2 text-sm font-medium text-white bg-red-600 hover:bg-red-500 shadow-sm", data: { turbo_confirm: "Are you sure? This will delete all related items and entries." } do %>
        <%= heroicon "trash", options: { class: "h-4 w-4" } %>
        <span>Delete</span>
      <% end %>
    </div>
  </div>
</div> 