<div class="px-4 sm:px-6 lg:px-8 py-6 font-light">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 mb-6">
    <h1 class="text-xl font-medium tracking-tight text-gray-900"><%= @presenter.month_label %></h1>
    <%= render "calendar/legend" %>
  </div>

  <% unless @presenter.data? %>
    <div class="mb-4 rounded border border-gray-200 bg-white px-3 py-2 text-xs text-gray-600">
      No entries recorded this month.
      <%= link_to "Add an entry", new_entry_path, class: "ml-1 text-brand-dark underline hover:text-brand" %>
    </div>
  <% end %>

  <div class="calendar-weekdays text-xs text-gray-500 mb-1 select-none">
    <% ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"].each do |dow| %>
      <div class="py-2 text-center tracking-wide"><%= dow %></div>
    <% end %>
  </div>

  <div class="calendar-month calendar-grid">
    <% @presenter.weeks.each do |week| %>
      <div class="calendar-week-row">
        <% week.each do |day| %>
          <%= render "calendar/day_cell", day: day %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
