<%# locals: (entry:, type:) %>
<li class="px-2.5 py-2 text-xs border-b border-gray-100 last:border-b-0 group">
  <div class="text-gray-700 mb-1"><%= entry[:name] %></div>
  <div class="font-medium <%= category_type_color(type) %>">
    <%= format_amount_with_sign(entry[:amount], type) %>
  </div>
  <div class="flex items-center gap-3 mt-0 max-h-0 overflow-hidden opacity-0 transition-all duration-200 group-hover:mt-2 group-hover:max-h-12 group-hover:opacity-100">
    <%= link_to "Edit", edit_entry_path(entry[:id]),
        class: "text-brand-dark font-medium transition-colors duration-200 hover:bg-brand-light hover:text-brand" %>
    <%= link_to "Delete", entry_path(entry[:id]),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this entry?" },
        class: "text-gray-700 font-medium transition-colors duration-200 hover:bg-status-danger-light hover:text-status-danger" %>
  </div>
</li>
