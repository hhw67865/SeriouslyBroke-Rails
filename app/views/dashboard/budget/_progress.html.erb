<%# Budget Progress %>
<div class="bg-white rounded shadow-sm p-6">
  <h3 class="font-semibold text-gray-900 mb-6">Budget Progress</h3>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <%# Food Budget %>
    <div class="bg-gray-50 rounded p-4">
      <div class="flex justify-between mb-2">
        <div class="font-medium text-gray-900">Food</div>
        <div class="text-sm text-gray-700">
          <span class="font-medium">$450</span>/$500
        </div>
      </div>
      <div class="h-2 bg-gray-200 rounded-full mb-1">
        <div class="h-2 bg-warning rounded-full" style="width: 90%"></div>
      </div>
      <div class="text-xs text-gray-600">90% used</div>
    </div>

    <%# Housing Budget %>
    <div class="bg-gray-50 rounded p-4">
      <div class="flex justify-between mb-2">
        <div class="font-medium text-gray-900">Housing</div>
        <div class="text-sm text-gray-700">
          <span class="font-medium">$800</span>/$800
        </div>
      </div>
      <div class="h-2 bg-gray-200 rounded-full mb-1">
        <div class="h-2 bg-danger rounded-full" style="width: 100%"></div>
      </div>
      <div class="text-xs text-gray-600">100% used</div>
    </div>

    <%# Transportation Budget %>
    <div class="bg-gray-50 rounded p-4">
      <div class="flex justify-between mb-2">
        <div class="font-medium text-gray-900">Transportation</div>
        <div class="text-sm text-gray-700">
          <span class="font-medium">$320</span>/$400
        </div>
      </div>
      <div class="h-2 bg-gray-200 rounded-full mb-1">
        <div class="h-2 bg-brand rounded-full" style="width: 80%"></div>
      </div>
      <div class="text-xs text-gray-600">80% used</div>
    </div>

    <%# Entertainment Budget %>
    <div class="bg-gray-50 rounded p-4">
      <div class="flex justify-between mb-2">
        <div class="font-medium text-gray-900">Entertainment</div>
        <div class="text-sm text-gray-700">
          <span class="font-medium">$150</span>/$300
        </div>
      </div>
      <div class="h-2 bg-gray-200 rounded-full mb-1">
        <div class="h-2 bg-brand rounded-full" style="width: 50%"></div>
      </div>
      <div class="text-xs text-gray-600">50% used</div>
    </div>
  </div>
</div> 