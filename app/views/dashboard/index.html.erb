<div class="min-h-screen bg-[#F9F9F7]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-2xl shadow-sm p-8">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold text-[#A4A266]">Welcome to SeriouslyBroke</h1>
          <p class="mt-2 text-gray-600">You are logged in as: <%= current_user.email %></p>
        </div>
        <%= button_to destroy_user_session_path, 
                      method: :delete, 
                      class: "px-4 py-2 rounded-xl border-2 border-[#C9C78B] text-[#A4A266] hover:bg-[#C9C78B]/10 transition-colors" do %>
          Sign out
        <% end %>
      </div>

      <div class="bg-[#F9F9F7] rounded-xl p-6">
        <p class="text-gray-600">Your dashboard content will appear here soon.</p>
      </div>
    </div>
  </div>
</div>
