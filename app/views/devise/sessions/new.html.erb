<div class="min-h-screen bg-gray-50 relative">
  <div class="absolute top-0 left-0 right-0">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <%= link_to root_path, class: "inline-flex items-center py-4 text-gray-600 hover:text-brand-dark transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        Back to Home
      <% end %>
    </div>
  </div>

  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full bg-white rounded shadow-sm p-8 space-y-8">
      <div>
        <h2 class="text-center text-3xl font-bold text-brand-dark">
          Welcome back
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
          Sign in to manage your finances
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
        <div class="space-y-4">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-brand focus:border-transparent" %>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-brand focus:border-transparent" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-brand focus:ring-brand border-gray-300 rounded" %>
              <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-600" %>
            </div>
          <% end %>
        </div>

        <%= f.submit "Sign in", class: "w-full inline-flex items-center justify-center gap-2 px-4 py-2 rounded bg-brand text-white text-sm font-medium hover:bg-brand-dark shadow-sm transition" %>
      <% end %>

      <div class="text-center text-sm">
        <% if devise_mapping.registerable? %>
          <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "text-brand-dark hover:text-brand transition-colors" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
