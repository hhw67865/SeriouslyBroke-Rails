<%= render layout: "devise/shared/auth_card",
           locals: { 
             title: "Welcome back",
             subtitle: "Sign in to manage your finances",
             footer: link_to("Create an account", new_registration_path(resource_name),
                     class: "text-base font-medium text-[#5F741D] hover:text-[#4b5c17] transition duration-200 ease-in-out")
           } do %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>

    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>

    <%= f.input :remember_me,
                as: :boolean,
                wrapper: :boolean,
                input_html: { class: 'form-checkbox' },
                required: false if devise_mapping.rememberable? %>

    <%= f.button :submit, "Sign in" %>
  <% end %>
<% end %>
